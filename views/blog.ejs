<!DOCTYPE html>
<html lang="en">

<head>
    <%-include("./partials/head") %>
        <title>Blog</title>
</head>

<body>
    <%-include("./partials/nav") %>
        <div class="container">
            <h1><%= blog.title %></h1>
            <img src="<%=blog.coverImageURL%>" width="400px">
            <pre><%= blog.body  %></pre>
        </div>

        <div class="container mt-3">
            <img src="<%= blog.createdBy.profileImageURL %>" width="40px">
            <%= blog.createdBy.fullName  %>
        </div>

        
        <%if (locals.user){%> 
            <div class="container mt-3">
                <h1>comment (<%=comments.length %>)</h1>
            <form action="/blog/comment/<%=blog._id %>" method="post">
                <div class="mb-3 mt-4">
                    <input type="text" class="form-control w-25" name="content" placeholder="Enter your comment">
                </div>
                <button type="submit" class="btn btn-primary mb-2">add</button>
            </form>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <div>
                        <img src="<%= blog.createdBy.profileImageURL %>" width="40px">
                        <%= blog.createdBy.fullName  %>: <pre><%= comment.content%></pre>
                    </div>
                <% }) %>
            </div>
        </div>
       <% }%>
     <%-include("./partials/script") %>
</body>
</html>